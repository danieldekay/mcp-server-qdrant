{
  "servers": {
    "qdrant-stdio": {
      "type": "stdio",
      "command": "uv",
      "args": ["run", "python", "-m", "mcp_server_qdrant.main", "--transport", "stdio"],
      "cwd": "${workspaceFolder}",
      "env": {
        "QDRANT_URL": ":memory:",
        "COLLECTION_NAME": "demo",
        "EMBEDDING_PROVIDER": "fastembed",
        "EMBEDDING_MODEL": "sentence-transformers/all-MiniLM-L6-v2"
      }
    },
    "qdrant-sse": {
      "type": "stdio",
      "command": "uv",
      "args": ["run", "python", "-m", "mcp_server_qdrant.main", "--transport", "sse"],
      "cwd": "${workspaceFolder}",
      "env": {
        "FASTMCP_PORT": "8000",
        "QDRANT_URL": ":memory:",
        "COLLECTION_NAME": "demo",
        "EMBEDDING_PROVIDER": "fastembed",
        "EMBEDDING_MODEL": "sentence-transformers/all-MiniLM-L6-v2"
      }
    }
  }
}